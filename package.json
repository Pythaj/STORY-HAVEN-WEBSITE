{
  "name": "story-haven",
  "version": "1.0.0",
  "description": "Story Haven - Premium Storytelling Platform by Dray Harmony",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-deps": "node scripts/check-dependencies.js",
    "update-deps": "npm update && npm audit fix --legacy-peer-deps",
    "update-deps-safe": "node scripts/safe-update.js",
    "update-all": "node scripts/update-all.js",
    "check-vulnerabilities": "npm audit --audit-level high",
    "test-after-update": "npm run build",
    "health-check": "node scripts/health-check.js",
    "backup-deps": "node scripts/backup-dependencies.js",
    "rollback-deps": "node scripts/rollback-dependencies.js",
    "auto-update": "npm run backup-deps && npm run update-deps-safe && npm run test-after-update && npm run health-check",
    "weekly-update": "node scripts/weekly-update.js",
    "clean-install": "rmdir /s /q node_modules && del package-lock.json && npm install --legacy-peer-deps",
    "setup-github": "node scripts/setup-github-secrets.js",
    "deploy-setup": "node scripts/deploy-setup.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.46.1",
    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "encoding": "^0.1.13",
    "framer-motion": "^10.18.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.263.1",
    "next": "^15.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-h5-audio-player": "^3.9.3",
    "react-icons": "^5.4.0",
    "react-pdf": "^9.1.1",
    "swiper": "^11.1.14",
    "whatwg-url": "^15.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-config-next": "^15.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2"
  }
}
