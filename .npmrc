# NPM Configuration for Story Haven
# This ensures smooth dependency installation

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Save exact versions to avoid breaking changes
save-exact=false

# Use package-lock for consistent installs
package-lock=true

# Prefer offline cache when available
prefer-offline=true

# Timeout for package downloads (60 seconds)
fetch-timeout=60000

# Retry failed downloads
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
